root = true

# Set default charset
[*.{ts,go,yaml,yml,proto},Makefile]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2

# 4 space indentation
[*.{ts}]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile,*.{go}]
indent_style = tab